// globalstyles styles

/*==========================================================
Color Theme
==========================================================*/
// cd-foreground = #4AF626
cd-foreground = #feffff
cd-flash = #4AF626
cd-background = #070202

settings-foreground = cd-foreground
settings-background = cd-background

content-foreground = cd-background
content-background = cd-foreground

/*==========================================================
Global Variables
==========================================================*/
// max-content-width = 900px
// mobile-side-padding = 15px


/*==========================================================
General Tag Styles
==========================================================*/
html
    height 100%

body
    position relative
    background-color cd-background
    color cd-foreground
    font-size: 12pt
    height 100%
    width 100%
    overflow hidden

h1
    font-size: 17pt
h2
    font-size: 15pt
p
    font-size: 12pt

select,
option,
input
    width 100%
    box-sizing: border-box
    font-size: 14pt
