.settingspage
    position fixed
    width 100%
    height 100%
    z-index 200
    overflow: hidden
    background-color cd-darkgrey
    transition all 0.3s
    transform translateX(-102%)
    opacity: 0

.here
    .settingspage
        transform translateX(0)
        opacity 1

