settings-foreground ?= white
settings-background ?= black

/*==========================================================
Settings Buttons
==========================================================*/
#settings
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    padding 20px 0
    box-sizing: border-box
    overflow: hidden
    transition: opacity 0.3s
    opacity: 0
    overflow-y auto
    z-index: -1

.settings-entry
    padding: 15px 20px
    font-size: 15pt
    text-align: left
    line-height: 110%
    display: block
    border-bottom: solid 1px alpha(settings-foreground, 0.15)
    .text
        max-width calc(100% - 30px)
        overflow: hidden
        text-overflow: ellipsis
        color settings-foreground
    .arrow
        position: absolute
        right 20px
        top 50%
        transform translateY(-50%)
        color alpha(settings-foreground, 0.4)

        svg
            width 30px
            height 30px
    
.icon-entry
    .text
        max-width calc(100% - 70px)
        overflow: hidden
        text-overflow: ellipsis
        position relative
        left 40px
        color settings-foreground
    .icon
        position: absolute
        left 20px
        top 50%
        transform translateY(-50%)
        color settings-foreground

        svg
            width 30px
            height 30px

.settings-entry:last-child
    border-bottom: none


.grouping-head
    margin-top 30px
    padding: 15px 20px
    font-size: 13pt
    // text-align: left
    text-align right
    // text-align center
    color alpha(settings-foreground, 0.33)


.grouping-head:first-child
    margin-top 5px



/*==========================================================
Settings Pages
==========================================================*/
.settingspage
    position fixed
    width 100%
    height 100%
    z-index 200
    overflow: hidden
    background-color settings-background
    transition all 0.3s
    transform translateX(102%)
    opacity: 0

.settingspage.here
    transform translateX(0)
    opacity 1


.settingspage-top
    position: fixed
    display flex
    justify-content: space-between
    align-items: center
    top 0
    right 0
    width 100%
    height 60px
    padding 15px
    box-sizing: border-box
    // inverted setting colors here
    background-color settings-foreground
    color settings-background
    text-align: right

    svg
        width: 30px
        height 30px

.settingspage-content
    position absolute
    bottom 15px
    left 15px
    height calc(100% - 90px)
    width calc(100% - 30px)
    overflow hidden
    padding-top 30px
    box-sizing: border-box

.settingspage-title
    text-align: left
    font-size: 15pt
    margin-left 30px
    // font-weight: bold




/*==========================================================
header styles
==========================================================*/
header
    position: fixed
    width 100%
    height 35px

#head-text
    position fixed
    top 20px
    left 30px
    font-size: 15pt
    transition transform 0.3s

#settings-text
    position fixed
    top 20px
    left 65px
    font-size: 20px
    font-weight: bold
    color settings-background
    transition transform 0.3s
    transform translateX(100vw)

#settings-button
    position: fixed
    top 0
    right 0
    width 60px
    height 60px
    padding 15px
    box-sizing: border-box
    transition transform 0.3s
    svg
        width: 30px
        height 30px

body.settings
    #settings-button
        transform: translateX(-100vw) translateX(+100%) translateX(+15px)    
        // color inverted here
        color settings-background
        
    #settings-text
        transform translateX(0)
    #head-text
        transform translateX(-300px)

body.settings
    // inverted of settings colors
    background-color settings-foreground
    color settings-background

/*==========================================================
Settings Off-Button
==========================================================*/
#settingsoff
    position: fixed
    top 0
    right 0
    width 60px
    height 60px
    padding 15px
    box-sizing: border-box
    transition transform 0.3s
    transform: translateX(102%)
    // color inverted of settings colors here
    color settings-background
    z-index 5
    svg
        width: 30px
        height 30px

/*==========================================================
main styles
==========================================================*/
main
    position fixed
    bottom 0
    left 5px
    height calc(100% - 60px)
    width calc(100% - 5px)
    overflow hidden
    z-index 99
    transition: background-color 0.3s
    background-color content-background


body.settings
    main
       background-color settings-background


/*==========================================================
Settings vs Content - presence
==========================================================*/
body.settings
    #content
        opacity 0
        z-index -1
    #settings
        opacity 1
        z-index 20
    
    #settingsoff
        transform: translateX(0)
